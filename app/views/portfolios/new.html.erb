<h1>Create new portfolio item</h1>

<%= form_for(@portfolio_item) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <ul>
  <%= f.fields_for :technologies do |technolgy_form|%>
    <li> 
      <%= technolgy_form.label :name %>
      <%= technolgy_form.text_field :name %>
    </li>
    <% end %>
  </ul>

  <div class="field">
    <%= f.label :main_image %>
    <%= f.text_area :main_image %>
  </div>

  <div class="field">
    <%= f.label :thumb_image %>
    <%= f.text_area :thumb_image %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
